{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with SDL2",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}/test.cpp",
                "-o",
                "${workspaceFolder}/output/test.exe",
                "-lSDL2"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
